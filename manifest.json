{
  "manifest_version": 3,
  "name": "SchoolSync",
  "version": "1.0.0",
  "description": "Securely sync student roster data from any SIS into Capsule. Supports PowerSchool, Infinite Campus, Skyward, Clever, ClassLink, Aeries, Genesis, Schoology, Canvas.",
  "permissions": [
    "storage",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "https://*.powerschool.com/*",
    "https://*.powerschool.com:*/*",
    "https://*.infinitecampus.com/*",
    "https://*.skyward.com/*",
    "https://*.clever.com/*",
    "https://*.classlink.com/*",
    "https://*.oneroster.com/*",
    "https://*.aeries.net/*",
    "https://*.genesisedu.com/*",
    "https://*.schoology.com/*",
    "https://*.instructure.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.powerschool.com/*",
        "https://*.powerschool.com:*/*",
        "https://*.infinitecampus.com/*",
        "https://*.skyward.com/*",
        "https://*.clever.com/*",
        "https://*.classlink.com/*",
        "https://*.oneroster.com/*",
        "https://*.aeries.net/*",
        "https://*.genesisedu.com/*",
        "https://*.schoology.com/*",
        "https://*.instructure.com/*"
      ],
      "js": ["src/content/detector.js"],
      "css": ["src/content/badge.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/parsers/*.js", "src/content/crawler.js"],
      "matches": [
        "https://*.powerschool.com/*",
        "https://*.infinitecampus.com/*",
        "https://*.skyward.com/*",
        "https://*.clever.com/*",
        "https://*.classlink.com/*",
        "https://*.oneroster.com/*",
        "https://*.aeries.net/*",
        "https://*.genesisedu.com/*",
        "https://*.schoology.com/*",
        "https://*.instructure.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src https://*.capsule.ai https://localhost:*;"
  }
}
